{
  "name": "eazytable",
  "version": "0.1.0",
  "description": "Switchable multi-view data display component for React â€” table, card, list, kanban and more.",
  "keywords": [
    "react",
    "table",
    "data-grid",
    "card-view",
    "kanban",
    "list-view",
    "view-switcher",
    "tanstack-table",
    "headless",
    "typescript"
  ],
  "homepage": "https://github.com/yourusername/eazytable",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/eazytable"
  },
  "license": "MIT",
  "author": "EazyTable Authors",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "NOTICE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.2"
  },
  "sideEffects": false
}
